{
  "manifest_version": 2,

  "name": "Feed Reeder",
  "description": "Add your feeds",
  "version": "0.0.3",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'sha256-DxDT9Ntjo6JV8XPgAiqvvxEnU+yALW6MJSx712grvOo='; object-src 'self'",
  "permissions": [
    "storage",
    "notifications",
    "tabs"
  ]
}
